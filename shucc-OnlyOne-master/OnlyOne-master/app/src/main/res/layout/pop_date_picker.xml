<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_date_picker_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6"
            android:padding="8dp"
            android:gravity="center"
            android:text="选择您的生日"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/pop_date_picker_parent_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/pop_date_picker_line_first"
                style="@style/line"
                android:layout_marginLeft="0dp"/>

            <View
                android:id="@+id/pop_date_picker_line_second"
                style="@style/line"
                android:layout_marginLeft="0dp"/>

            <com.xunao.onlyone.ui.widget.timerpicker.LoopView
                android:id="@+id/pop_date_picker_year"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_date_picker_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.xunao.onlyone.ui.widget.timerpicker.LoopView
                android:id="@+id/pop_date_picker_month"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.xunao.onlyone.ui.widget.timerpicker.LoopView
                android:id="@+id/pop_date_picker_day"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_date_picker_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>