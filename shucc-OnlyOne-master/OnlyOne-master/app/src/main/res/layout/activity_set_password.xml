<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/actionbar_rl">

        <ImageView
            android:id="@+id/img_back"
            android:padding="16dp"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_back"/>

        <TextView
            style="@style/actionbar_title"
            android:text="@string/setpassactivity_title"/>

    </RelativeLayout>

    <View
        android:background="@color/line_grey"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        style="@style/input_ll">

        <TextView
            style="@style/input_text"
            android:text="@string/setpassactivity_input_text"/>

        <EditText
            android:id="@+id/edit_pass"
            style="@style/input_edit"
            android:inputType="textPassword"
            android:hint="@string/setpassactivity_input_edit"/>

    </LinearLayout>

    <View style="@style/line"/>

    <LinearLayout
        style="@style/input_ll">

        <TextView
            style="@style/input_text"
            android:text="@string/setpassactivity_input_again_text"/>

        <EditText
            android:id="@+id/edit_pass_again"
            style="@style/input_edit"
            android:inputType="textPassword"
            android:hint="@string/setpassactivity_input_again_edit"/>

    </LinearLayout>

    <View style="@style/line"/>

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">

        <TextView
            android:id="@+id/text_code"
            style="@style/input_text"
            android:layout_centerVertical="true"
            android:text="@string/setpassactivity_code_text"/>

        <EditText
            android:id="@+id/edit_code"
            style="@style/input_edit"
            android:layout_toRightOf="@+id/text_code"
            android:layout_toLeftOf="@+id/img_code"
            android:hint="@string/setpassactivity_code_eidt"/>
        
        <ImageView
            android:id="@+id/img_code"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/default_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_commit"
            style="@style/red_button"
            android:text="@string/commit"/>

    </RelativeLayout>

</LinearLayout>