<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        style="@style/actionbar_rl">

        <ImageView
            android:id="@+id/img_back"
            android:padding="16dp"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_back"/>

        <TextView
            style="@style/actionbar_title"
            android:text="@string/setgenderactivity_title"/>

        <TextView
            android:id="@+id/text_ok"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:text="@string/ok"
            android:textColor="#c83144"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="0dp"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">
        
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setgenderactivity_gender"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        
        <ImageView
            android:id="@+id/img_man"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="36dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setgenderactivity_man"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/img_woman"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="4dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setgenderactivity_woman"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        
    </LinearLayout>

</LinearLayout>