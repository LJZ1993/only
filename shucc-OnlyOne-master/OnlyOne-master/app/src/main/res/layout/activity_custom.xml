<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/actionbar_rl">

        <ImageView
            android:id="@+id/img_back"
            android:padding="16dp"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_back"/>

        <TextView
            style="@style/actionbar_title"
            android:text="@string/customactivity_title"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_actionbar"
        style="@style/line"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customactivity_on_line_custom"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/rl_hot_wire_tel"
        style="@style/item_rl"
        android:background="@android:color/white">

        <TextView
            style="@style/item_text"
            android:text="@string/customactivity_hot_wire_tel_text"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customactivity_hot_wire_tel_num"
            android:textSize="14sp"
            android:textColor="@color/mine_info_red"/>

    </RelativeLayout>

    <TextView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customactivity_hot_question"
        android:textSize="12sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_feedback"
        style="@style/item_rl"
        android:layout_marginTop="8dp"
        android:background="@android:color/white">

        <TextView
            style="@style/item_text"
            android:text="@string/customactivity_feedback"/>

    </RelativeLayout>

</LinearLayout>