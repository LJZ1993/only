<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_tab_parent"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_home"
            style="@style/mainactivity_tab_ll">

            <ImageView
                android:id="@+id/img_home"
                android:layout_gravity="center_horizontal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_tab_one_normal"/>

            <TextView
                android:id="@+id/text_home"
                style="@style/mainactivity_tab_text"
                android:text="@string/mainactivity_tab_one"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sort"
            style="@style/mainactivity_tab_ll">

            <ImageView
                android:id="@+id/img_sort"
                style="@style/mainactivity_tab_img"
                app:srcCompat="@drawable/ic_tab_two_normal"/>

            <TextView
                android:id="@+id/text_sort"
                style="@style/mainactivity_tab_text"
                android:text="@string/mainactivity_tab_two"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_announced"
            style="@style/mainactivity_tab_ll">

            <ImageView
                android:id="@+id/img_announced"
                style="@style/mainactivity_tab_img"
                app:srcCompat="@drawable/ic_tab_three_normal"/>

            <TextView
                android:id="@+id/text_announced"
                style="@style/mainactivity_tab_text"
                android:text="@string/mainactivity_tab_three"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shopping_cart"
            style="@style/mainactivity_tab_ll">

            <ImageView
                android:id="@+id/img_shopping_cart"
                style="@style/mainactivity_tab_img"
                app:srcCompat="@drawable/ic_tab_four_normal"/>

            <TextView
                android:id="@+id/text_shopping_cart"
                style="@style/mainactivity_tab_text"
                android:text="@string/mainactivity_tab_four"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            style="@style/mainactivity_tab_ll">

            <ImageView
                android:id="@+id/img_mine"
                style="@style/mainactivity_tab_img"
                app:srcCompat="@drawable/ic_tab_five_normal"/>

            <TextView
                android:id="@+id/text_mine"
                style="@style/mainactivity_tab_text"
                android:text="@string/mainactivity_tab_five"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_main_frame"
        android:layout_above="@+id/ll_tab_parent"
        android:layout_marginBottom="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_above="@+id/ll_tab_parent"
        android:background="#e3e4e4"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</RelativeLayout>
