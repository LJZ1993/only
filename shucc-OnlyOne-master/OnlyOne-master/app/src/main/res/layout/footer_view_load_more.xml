<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <LinearLayout
        android:id="@+id/footer_view_load_now"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pb_progressBar"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/progressBar_size"
            android:layout_height="@dimen/progressBar_size" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/pb_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/recyclerview_padding"
            android:text="@string/foot_view_loading" />

    </LinearLayout>

    <TextView
        android:id="@+id/footer_view_load_all"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/foot_view_load_all"/>

</RelativeLayout>