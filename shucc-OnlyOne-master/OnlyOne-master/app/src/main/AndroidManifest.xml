<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xunao.onlyone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 新手指南 -->
        <activity
            android:name=".ui.activity.BeginnerGuideActivity"
            android:screenOrientation="portrait" />
        <!-- 专区 -->
        <activity
            android:name=".ui.activity.GoodAreaActivity"
            android:screenOrientation="portrait" />
        <!--搜索-->
        <activity
            android:name=".ui.activity.SearchActivity"
            android:screenOrientation="portrait" />
        <!--添加晒单-->
        <activity
            android:name=".ui.activity.AddShowBillActivity"
            android:screenOrientation="portrait" />
        <!--设置-->
        <activity
            android:name=".ui.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <!--我的资料-->
        <activity
            android:name=".ui.activity.MineInfoActivity"
            android:screenOrientation="portrait" />
        <!--设定性别-->
        <activity
            android:name=".ui.activity.SetGenderActivity"
            android:screenOrientation="portrait" />
        <!--设定生日-->
        <activity
            android:name=".ui.activity.SetBirthDayActivity"
            android:screenOrientation="portrait" />
        <!--修改昵称-->
        <activity
            android:name=".ui.activity.SetNickNameActivity"
            android:screenOrientation="portrait" />

        <!--登录-->
        <activity
            android:name=".ui.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <!--注册-->
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <!--重置密码-->
        <activity
            android:name=".ui.activity.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <!--设置密码-->
        <activity
            android:name=".ui.activity.SetPasswordActivity"
            android:screenOrientation="portrait" />
        <!--设置手机号码-->
        <activity
            android:name=".ui.activity.SetTelActivity"
            android:screenOrientation="portrait" />
        <!--设置地址-->
        <activity
            android:name=".ui.activity.SetLocationActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <!--客服-->
        <activity
            android:name=".ui.activity.CustomServiceActivity"
            android:screenOrientation="portrait" />
        <!--意见反馈-->
        <activity
            android:name=".ui.activity.FeedbackActivity"
            android:screenOrientation="portrait" />
        <!--开放源代码许可-->
        <activity
            android:name=".ui.activity.OpenSourceActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>